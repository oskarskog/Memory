<Window x:Class="Memory.views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory.views"
        mc:Ignorable="d"
        Title="Memory Menu" Height="300" Width="300">
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="24" FontFamily="Consolas" Margin="0,0,0,20">Your name</TextBlock>
        <TextBox x:Name="nameInput" MaxLength="50" Margin="0,0,0,20"></TextBox>
        <Button x:Name="nameButton" Content="Start" Width="75" Height="35" Click="nameButton_Click"></Button>
        <TextBlock Text="" x:Name="warning_text"  Margin="0,20,0,0"/>
    </StackPanel>
    
</Window>
